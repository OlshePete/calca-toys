{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    // "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@modules/*": ["./modules/*"],
      "@public/*": ["./public/*"],
      "@services/*": ["./services/*"],
      "@components/*": ["./components/*"],
      "@theme/*": ["./theme/*"],
      "@store/*": ["./store/*"],
      "@apptypes": ["./types/index"],
      "@apptypes/api": ["./types/api"],
      "@apptypes/basket": ["./types/basket"],
      "@apptypes/order": ["./types/order"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
